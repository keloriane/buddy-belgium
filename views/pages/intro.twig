{% extends getf('baseNoFooter') %}
{% block body %}
  <div class="intro">
    <div>
      <ul class="intro__social">
        <li><a href=""><img src="https://www.buddybelgium.com/wp-content/uploads/2021/06/facebook.png" alt=""></a></li>
        <li><a href=""><img src="https://www.buddybelgium.com/wp-content/uploads/2021/06/twitter.png" alt=""></a></li>
        <li><a href=""><img src="https://www.buddybelgium.com/wp-content/uploads/2021/06/ig.png" alt=""></a></li>
      </ul>
      {% include getf('logo') %}
    </div>
    <img class="intro__top-left-logo" src="{{ logo_top_left }}" alt="">
    <div class="intro__inner">
      <div class="intro__left">
        <div class="intro__left__test"></div>
        <h2 class="intro__main-title">
          <span class="intro__main-title--white">The first</span>
          <span class="intro__main-title--white">European</span>
          <span class="intro__main-title--blue">Hub for legal</span>
          <span class="intro__main-title--blue">Cannabis</span>
        </h2>
      </div>

      <img class="intro__center-logo" src="{{ logo_center }}" alt="">
      <div class="intro__right">
        {% if not display_form %}
          {% include getf('intro.question') %}
        {% endif %}
        {% if display_form %}
          {% include getf('intro.vat-question') %}
        {% endif %}
      </div>
    </div>
  </div>
{% endblock body %}
