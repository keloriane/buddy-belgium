<div class="menu-nav">
  <div class="title">
    <h1>Buddy Belgium</h1>
  </div>
  <div class="logo-menu-container">

  </div>
  <div class="menu-action" id="burger">
    <div>
      menu <span class="green">.</span>
    </div>
  </div>
</div>

<nav id="menu-burger">
  <ul class="nav-main">
    {% for item in menu.items %}
      <li class="nav-main-item {{ item.classes|join(' ') }}">
        <a class="nav-main-link" href="{{ item.link }}">{{ item.title }}</a>
        {% if item.children %}
          <ul class="nav-drop">
            {% for child in item.children %}
              <li class="nav-drop-item">
                <a href="{{ child.link }}">{{ child.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
